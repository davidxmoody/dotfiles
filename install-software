#!/bin/bash

npm i -g \
  coffee-script \
  gulp \
  http-server \
  jsonlint \
  nodemon \
  ramda-cli \
  diff-so-fancy \
  cloc \
  npm-check

npm info "eslint-config-airbnb@latest" peerDependencies --json | command sed 's/[\{\},]//g ; s/: /@/g' | xargs npm install -g "eslint_d" "eslint-config-airbnb@latest"

sudo apt-get install git
sudo apt-get install gitk
sudo apt-get install git-extras
sudo apt-get install silversearcher-ag
sudo apt-get install meld
sudo apt-get install baobab

# For compiling YouCompleteMe
sudo apt-get install build-essential cmake python-dev python3-dev

sudo pip install pygments # For ranger syntax highlighting
sudo pip3 install neovim-remote
