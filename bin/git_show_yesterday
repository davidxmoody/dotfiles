#!/bin/bash

date_cmd=date
type gdate >/dev/null 2>/dev/null && date_cmd=gdate

day_of_week=$(date +%w)
if [ "$day_of_week" = 0 ]; then
  look_back=2
elif [ "$day_of_week" = 1 ]; then
  look_back=3
else
  look_back=1
fi

last_working_day=$($date_cmd -d "${look_back} day ago" +%Y-%m-%d)

for dir in $(ls -1 $P_DIR); do
  git_dir=$P_DIR/$dir/.git
  [ ! -d "$git_dir" ] && continue
  commits=$(git --no-pager --git-dir="$git_dir" lg --since="$last_working_day" --author="$(git config user.name)")
  if [ -n "$commits" ]; then
    echo "$dir"
    echo "$commits"
    echo
  fi
done
