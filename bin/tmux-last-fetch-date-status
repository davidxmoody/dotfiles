#!/usr/bin/env bash

set -e

fetch_date_file="$HOME/.fetch-all-last-date"

if [[ ! -f "$fetch_date_file" ]]; then
  echo "Never fetched"
  exit 1
fi

now=$(date +%s)
fetch_date=$(cat "$fetch_date_file")
age=$((now - fetch_date))
twelve_hours=$((60 * 60 * 12))

if ((age > twelve_hours)); then
  echo "$((age / 60 / 60))h"
fi
