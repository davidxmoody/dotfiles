#!/bin/bash

npm info "eslint-config-airbnb@latest" peerDependencies --json | \
  command sed 's/[\{\},]//g ; s/: /@/g' | \
  xargs npm i -g "eslint_d" "eslint-config-airbnb@latest"

npm i -g \
  gtop \
  npm-check \
  http-server \
  jsonlint \
  diff-so-fancy \
  ramda-cli \
  tslint \
  typescript
