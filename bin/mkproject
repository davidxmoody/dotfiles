#!/usr/bin/env bash

set -e

while getopts "nt" opt; do
  case "$opt" in
    n)
      npm_init=true
      ;;
    t)
      tmp_prefix=tmp-$(date +%F)-
      ;;
    *)
      echo "Invalid flags" >&2
      exit 1
  esac
done

shift $((OPTIND - 1))

project_name=$1
project_path="$P_DIR/$tmp_prefix$project_name"

if [[ -z "$project_name" ]]; then
  echo "Error: Please enter a project name" >&2
  exit 1
fi

if [[ -e "$project_path" ]]; then
  echo "Error: Project already exists" >&2
  exit 1
fi

mkdir -p "$project_path"
cd "$project_path"

git init > /dev/null

if [[ "$npm_init" == true ]]; then
  echo "node_modules/" > .gitignore
  npm init --yes > /dev/null
fi

echo "$project_path"
